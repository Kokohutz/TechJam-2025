{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@lynx-js/react",

    "module": "node18",
    "moduleResolution": "node16",

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["@lynx-js/types"]        // optional, helps TS load Lynx typings
  },
  "exclude": ["dist/"],
  "include": ["src"]
}
